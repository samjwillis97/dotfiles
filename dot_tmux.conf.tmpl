
# Better Splitting
bind | split-window -h -c "#{pane_current_path}"
bind - split-window -v -c "#{pane_current_path}"

bind-key -T copy-mode-vi 'C-h' select-pane -L
bind-key -T copy-mode-vi 'C-j' select-pane -D
bind-key -T copy-mode-vi 'C-k' select-pane -U
bind-key -T copy-mode-vi 'C-l' select-pane -R
bind-key -T copy-mode-vi 'C-\' select-pane -l

# Better Resizing

# Enabled 256 COlor
set -g default-terminal "screen-256color"
set-option -ga terminal-overrides ",xterm-256color:Tc"

# Enable scrolling
set -g mouse on

# easy reload
bind-key r source-file ~/.tmux.conf \; display-message "~/.tmux.conf reloaded"

# Plugins
run -b '~/.tmux/plugins/tpm/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'christoomey/vim-tmux-navigator'

# Powerline
run-shell "powerline-daemon -q"

{{- if eq .chezmoi.hostname "tifc" "AMP-6537"}}
source "/home/$USER/.local/lib/python3.8/site-packages/powerline/bindings/tmux/powerline.conf"
{{- else if eq .chezmoi.os "darwin"}}
source "/$HOME/Library/Python/3.8/lib/python/site-packages/powerline/bindings/tmux/powerline.conf"
{{- else }}
source "/home/$USER/.local/pipx/venvs/powerline-status/lib/python3.*/site-packages/powerline/bindings/tmux/powerline.conf"
{{- end }}

# Keep at bottom
run -b '~/.tmux/plugins/tpm/tpm'
